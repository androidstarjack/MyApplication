    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入学学习"
        android:paddingLeft="5dp"
        android:background="@drawable/editext_slelect_black4"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入学学习"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingLeft="5dp"
        android:background="@drawable/editext_slelect_black4"
        />
</LinearLayout>
